<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
		<link href="{{ asset('bundle/myBundle/css/stylesheet.css') }}" type="text/css" rel="stylesheet" />
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">{% endblock %}
    </head>
    <body>
	<nav id="navbar_main" class="mobile-offcanvas navbar navbar-expand-lg navbar-dark bg-primary">
  <div class="offcanvas-header">  
    <h5 class="py-2 text-white">G-Véhicule</h5>
  </div>
  <ul class="navbar-nav">
    <li class="nav-item active"> <a class="nav-link" href="principal">Page d'accueil </a> </li>
    {% if is_granted('ROLE_EMPLOYE') %}
    <li class="nav-item active"> <a class="nav-link" href="demande">Demande</a> </li>
    {% endif %}
    {% if is_granted('ROLE_GESTIONNAIRE') %}
	  <li class="nav-item active"> <a class="nav-link" href="gestiondemandes">Gestionnaire des demandes </a> </li>
    <li class="nav-item active"> <a class="nav-link" href="historique">Historique</a> </li>
    {% endif %}
    {% if is_granted('ROLE_USER')  %}
    {% else %}
    <li class="nav-item active"> <a class="nav-link" href="register">Inscription</a> </li>
    <li class="nav-item active"> <a class="nav-link" href="login">Connexion</a> </li>
    {% endif %}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
    <li class="nav-item active"> <a class="nav-link" href="logout">Se déconnecter</a> </li>
    {% endif %}
  </ul>
</nav>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
